{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-O0",
                "-Wall",
                "-fopenmp",
                "${workspaceFolder}/source/main.c",
                "${workspaceFolder}/source/examples.c",
                "${workspaceFolder}/source/hud.c",
                "${workspaceFolder}/source/num.c",
                "${workspaceFolder}/source/output.c",
                "${workspaceFolder}/source/sdl.c",
                "${workspaceFolder}/source/setup.c",
                "${workspaceFolder}/source/vsop87.c",
                "-o",
                "${workspaceFolder}/nbody",
                "-m64",
                "-march=native",
                "-lm",
                "`sdl2-config --cflags --libs`",
                "-lSDL2_ttf",
                "-lOpenCL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}